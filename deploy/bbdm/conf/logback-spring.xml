<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
    <property name="DEV_LOG_HOME" value="/Users/wujian/IdeaProjects/hsbc-ocr-real-predictor/deploy/bbdm/log"/>

    <appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%p] --- [%t] %c [%L]  :    %m%n
            </pattern>
        </layout>
    </appender>

    <appender name="fileInfoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
<!--        <filter class="ch.qos.logback.classic.filter.LevelFilter">-->
<!--            <level>ERROR</level>-->
<!--            <onMatch>DENY</onMatch>-->
<!--            <onMismatch>ACCEPT</onMismatch>-->
<!--        </filter>-->
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%p] --- [%t] %c [%L]  :    %m%n
            </pattern>
        </encoder>
        <!--滚动策略-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <springProfile name="dev">
                <fileNamePattern>${DEV_LOG_HOME}/info.%d.log</fileNamePattern>
            </springProfile>
            <springProfile name="prod">
                <fileNamePattern>/root/bbdm/log/info.%d.log</fileNamePattern>
            </springProfile>

        </rollingPolicy>
    </appender>

    <appender name="fileErrorLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%p] --- [%t] %c [%L]  :    %m%n
            </pattern>
        </encoder>
        <!--滚动策略-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <springProfile name="dev">
                <fileNamePattern>${DEV_LOG_HOME}/error.%d.log</fileNamePattern>
            </springProfile>
            <springProfile name="prod">
                <fileNamePattern>/root/bbdm/log/error.%d.log</fileNamePattern>
            </springProfile>
        </rollingPolicy>
    </appender>

    <root level="info">
        <appender-ref ref="consoleLog" />
        <appender-ref ref="fileInfoLog" />
        <appender-ref ref="fileErrorLog" />
    </root>

</configuration>